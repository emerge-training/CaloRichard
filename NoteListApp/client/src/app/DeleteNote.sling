import jk.widget
import jk.widget.common

class #widget:

ui VerticalBoxWidget
{
	spacing = context.getHeightValue("2500um")
            marginTop = 100
            marginRight = 500
            marginLeft = 500
    HorizontalBoxWidget {
        spacing = context.getHeightValue("100um")
        TextButtonWidget btnHome : 1.0 {
            text = "VIEW NOTE LIST"
            padding = context.getHeightValue("1000um")
            backgroundColor = Color.instance("#ffb3d9")
            clickHandler = func {
                onViewClicked()
            }
        }
		
    }
	VerticalScrollerWidget {
		scrollBarDisabled = true
		LayerWithBackgroundColorWidget container {
            color = Color.instance("#ff0000")
		AlignWidget {
			VerticalBoxWidget vbox : 0.5, 0.5, false {
				margin = context.getHeightValue("5mm")
				spacing = context.getHeightValue("2000um")
				LabelWidget {
					text = "DELETE NOTE"
					textColor = Color.black()
					fontSize = context.getHeightValue("4mm")
					textAlign = LabelWidget.ALIGN_CENTER
					fontBold = true
				}
				TextInputWidget id {
					type = TextInputWidget.TYPE_INTEGER
					placeholder = "PLEASE INPUT THE ID YOU WANT TO DELETE"
					backgroundColor = Color.black()
					fontSize = context.getHeightValue("2mm")
					padding = context.getHeightValue("2500um")
				}
			}
		}
		}
	}
}
func onViewClicked:
	NavigationWidget.switchToContainer(this, new NoteListApp(context))

func initializeWidget override
{
	base.initializeWidget()
	var deletebtn = ButtonWidget.forText(context, "SUBMIT", func {
        APIClient.getInstance().getNotelist(func(response as DynamicMap){
			var data = assert response.getDynamicMap("data")
			var records = data.getDynamicVector("records")
			foreach record as DynamicMap in records.toVector(){
				if record.getString("id") == id.getWidgetText(){
					var popup = new PopupDialogManager(context, this)
					popup.showConfirmDialog("Confirmation","Continue to delete this Note?", func{
					    APIClient.getInstance().delete(id.getWidgetText(), func(res as DynamicMap){
							context.showMessageDialog("Notice", "Successfully deleted!")
							id.setWidgetText("")
						}, func(err as Error){
							context.showMessageDialog("Notice", "Failed!")
							})
						}, func{
								;
							})
				}
			}
        })
})
	deletebtn.setWidgetFontSize(context.getHeightValue("4mm"))
	vbox.addWidget(deletebtn)
}
